@model FoodyCoody.ViewModels.HomePageViewModel

@{ 
    ViewBag.Title = "Home";
}

<h1>Welcome!</h1>

<table>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@Html.ActionLink(restaurant.Id.ToString(), "Details", new { id = restaurant.Id })</td>
            <td>
                <a asp-action="Details" asp-route-id="@restaurant.Id">@restaurant.Id.ToString()</a>
            </td>
            <td>@restaurant.Name</td>
        </tr>
    }
</table>

<a asp-controller="Home" asp-action="Create">Create</a>

@section footer {
    <div>@Model.CurrentGreeting</div>
}